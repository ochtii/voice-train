{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "VoiceRecognition": {
    "RaspberryPi": {
      "DefaultHost": "192.168.1.100",
      "Port": 8000,
      "ConnectionTimeout": 30,
      "ReconnectDelay": 5000,
      "MaxReconnectAttempts": 10
    },
    "Audio": {
      "SampleRate": 16000,
      "BitDepth": 16,
      "Channels": 1,
      "BufferSize": 4096,
      "DeviceLatency": 20
    },
    "UI": {
      "Theme": "Dark",
      "AutoConnect": true,
      "MinimizeToTray": true,
      "ShowNotifications": true
    },
    "Security": {
      "EnableTLS": true,
      "ValidateCertificates": false,
      "ApiKey": ""
    }
  }
}